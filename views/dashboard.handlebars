<section class="card">
  <h2 class="card-header">Create New Post</h2>
  <form class="new-post-form">
    <div>
      <label for="post-title" class="form-label">Title:</label>
      <input type="text" id="post-title" name="post-title" class="form-input"/>
    </div>
    <div>
      <label for="post-content" class="form-label">Body:</label>
      <input id="post-content" name="post-content" class="form-textarea"/>
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>

{{#if posts.length}}
<section>
    <h2>Your Posts:</h2>
    <ol>
        {{#each posts as |post|}}
        <li>
            {{> post-info post}}
            <a href="/dashboard/edit/{{post.id}}" class="edit-link btn">Edit post</a>
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>